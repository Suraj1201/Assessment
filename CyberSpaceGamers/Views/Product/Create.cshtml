@model CyberSpaceGamers.Models.Product

<div class="card shadow border-0 mt-4">
    @* Header section with the page title *@
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    @* The main form area where users enter product information *@
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @* Input field for the product name *@
                <div class="form-floating py-2 col-12 text-dark">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                @* Input field for a short description of the product *@
                <div class="form-floating py-2 col-12 text-dark">
                    <input asp-for="ShortDescription" class="form-control border-0 shadow" />
                    <label asp-for="ShortDescription" class="ms-2"></label>
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>
                @* Input field for product price *@
                <div class="form-floating py-2 col-12 text-dark">
                    <input asp-for="Price" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                @* Input field for age rating (for example, 12+, 16+, etc.) *@
                <div class="form-floating py-2 col-12 text-dark">
                    <input asp-for="AgeRating" class="form-control border-0 shadow" />
                    <label asp-for="AgeRating" class="ms-2"></label>
                    <span asp-validation-for="AgeRating" class="text-danger"></span>
                </div>
                @* Input field for the game genre (like action, horror, etc.) *@
                <div class="form-floating py-2 col-12 text-dark">
                    <input asp-for="Genre" class="form-control border-0 shadow" />
                    <label asp-for="Genre" class="ms-2"></label>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                @* Buttons for submitting the form or going back to the product list *@
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="ProductControl" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>
