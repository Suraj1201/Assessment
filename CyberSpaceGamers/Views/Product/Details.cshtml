@model CyberSpaceGamers.Models.Product
@{
    ViewData["Title"] = "Product";
    Layout = "_Layout";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Product">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Image area -->
        <div class="col-md-5">
            <div class="card">
                <div class="ratio ratio-4x3 d-flex align-items-center justify-content-center text-muted">
                    <img src="~/img/logo.png" alt="Alternate Text" />
                </div>
            </div>
        </div>

        <!-- Details area -->
        <div class="col-md-7">
            <h1 class="h3 mb-2">@Model.Name</h1>

            <div class="d-flex flex-wrap gap-2 mb-3">
                <span class="badge text-bg-secondary">@Model.Genre</span>
                <span class="badge text-bg-dark">@Model.AgeRating</span>
            </div>

            <div class="h4 mb-3">£00.00</div>

            <p class="text-muted mb-2">
                <a href=""></a>
                @Model.ShortDescription
            </p>
            <p>
                Longer description for the product. This is layout content only (no data binding).
            </p>

            <div class="d-flex gap-2 mt-3">
                <a class="btn btn-primary" asp-controller="Basket" asp-action="Index">Add to Basket</a>
            </div>

            <hr class="my-4" />

            <div>
                <h2 class="h6">Details</h2>
                <ul class="small text-muted mb-0">
                    <li>Genre: @Model.Genre</li>
                    <li>Age Rating: @Model.AgeRating</li>
                    <li>Platform: —</li>
                    <li>Release: —</li>
                </ul>
            </div>
        </div>
    </div>
</div>