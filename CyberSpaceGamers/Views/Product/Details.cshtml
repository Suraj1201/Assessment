@model CyberSpaceGamers.Models.Product
@{
    // Sets the title of the page and uses the shared layout
    ViewData["Title"] = "Product";
    Layout = "_Layout";
}

<div class="container py-4">
    @* Navigation breadcrumbs to help the user know where they are *@
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Product">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Image area -->
        <div class="col-md-5">
            <div class="card">
                <div class="ratio ratio-4x3 d-flex align-items-center justify-content-center text-muted">
                    <img src="~/img/logo.png" alt="Alternate Text" />
                </div>
            </div>
        </div>

        <!-- Details area -->
        <div class="col-md-7">
            <h1 class="h3 mb-2">@Model.Name</h1>

            <div class="d-flex flex-wrap gap-2 mb-3">
                <span class="badge text-bg-secondary">@Model.Genre</span>
                <span class="badge text-bg-dark">@Model.AgeRating</span>
            </div>
            @* Product price *@

            <div class="h4 mb-3">£@Model.Price</div>

            <p class="text-muted mb-2">
                <a href=""></a>
                @Model.ShortDescription
            </p>
            <p>
                @* Placeholder for a longer description (can be updated later) *@
                Longer description for the product. This is layout content only (no data binding).
            </p>

            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Basket" asp-action="AddToBasket" method="post" class="m-0">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary btn-sm">Add to Basket</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-sm" type="button">Login to Add</a>
            }
            <hr class="my-4" />

            <div>
                <h2 class="h6">Details</h2>
                <ul class="small text-muted mb-0">
                    <li>Genre: @Model.Genre</li>
                    <li>Age Rating: @Model.AgeRating</li>
                    <li>Platform: —</li>
                    <li>Release: —</li>
                </ul>
            </div>
        </div>
    </div>
</div>