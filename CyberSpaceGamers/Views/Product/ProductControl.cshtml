@model List<Product>
@{
    ViewData["Title"] = "ProductControl";     // Sets the title of the page and applies the main layout
    Layout = "_Layout";
}


<div class="container">
    @* Page heading *@
       <div class="col-6">
           <h2 class="text-primary">PRODUCT LIST</h2>
       </div>
    @* Button to create a new product *@
       <div class="col-6">
           <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New Product
           </a>
       </div>
    @* Table that displays all products from the database *@
    <table class="table table-bordered text-white product-table">
        @* Table header with column names *@
        <thead class="product-table-header">
            <tr>
                <th>Product Name</th>
                <th>Short Description</th>
                <th>Price</th>
                <th>Age Rating</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>    @* Table body where each product will be listed *@

            @foreach (var obj in Model)       @* Loop through each product in the model and display its info *@
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.ShortDescription
                    </td>
                    <td>
                        £@obj.Price
                    </td>
                    <td>
                        @obj.AgeRating
                    </td>
                    <td>
                        @obj.Genre
                    </td>
                    <td>
                        @* Buttons for editing or deleting the selected product *@
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>

                </tr>
             }
        </tbody>
    </table>
</div>