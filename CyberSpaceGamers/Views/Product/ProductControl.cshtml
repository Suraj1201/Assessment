@model List<Product>
@{
    ViewData["Title"] = "ProductControl";
    Layout = "_Layout";
}


<div class="container">
       <div class="col-6">
           <h2 class="text-primary">PRODUCT LIST</h2>
       </div>
       <div class="col-6">
           <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New Product
           </a>
       </div>
    @* Products in the database *@
    <table class="table table-bordered text-white product-table">
        <thead class="product-table-header">
            <tr>
                <th>Product Name</th>
                <th>Short Description</th>
                <th>Price</th>
                <th>Age Rating</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>

            @* Loop through each product in the model and display its info *@
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.ShortDescription
                    </td>
                    <td>
                        £@obj.Price
                    </td>
                    <td>
                        @obj.AgeRating
                    </td>
                    <td>
                        @obj.Genre
                    </td>
                    <td>
                        @* Edit / Delete button *@
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>

                </tr>
             }
        </tbody>
    </table>
</div>