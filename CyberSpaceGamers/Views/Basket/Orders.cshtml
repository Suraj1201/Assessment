@{
    ViewData["Title"] = "Your Order History";
}
<section class="container py-4 page-orders">
    <h1 class="display-6 fw-bold text-uppercase mb-3">Your Order History</h1>

    <!-- Items table -->
    <div class="table-responsive">
        <table class="table table-sm align-middle mb-0 order-table">
            <thead>
                <!-- new meta row -->
                <tr class="table-secondary">
                    <th colspan="2" class="text-start">Date: 6 Oct, 2025</th>
                    <th class="text-end">Order #: 10090124489</th>
                </tr>
                <!-- existing header row -->
                <tr>
                    <th scope="col">Product Name</th>
                    <th class="text-center">Qty</th>
                    <th class="text-end">Price</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>BattleField 6</td>
                    <td class="text-center">1</td>
                    <td class="text-end">£29.99</td>
                </tr>
                <tr>
                    <td>Super Smash Bros Ultimate</td>
                    <td class="text-center">1</td>
                    <td class="text-end">£54.50</td>
                </tr>
                <tr>
                    <td>Fallout 4</td>
                    <td class="text-center">1</td>
                    <td class="text-end">£11.99</td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="2" class="text-end">Total</th>
                    <th class="text-end">£96.48</th>
                </tr>
            </tfoot>
        </table>
    </div>

    @* Optional empty state for later
    <div class="alert alert-info">You have no orders yet.</div>
    *@
</section>