@model IEnumerable<CyberSpaceGamers.Models.Order>
@{
    // setting the page title//
    ViewData["Title"] = "Your Order History";
}

@*This part shows the user's order history page. 
   If there are no orders, it shows a message. 
   Otherwise, it will display the orders later. *@

<section class="container py-4 page-orders">
    <h1 class="display-6 fw-bold text-uppercase mb-3">Your Order History</h1>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-controller="Account" asp-action="Index" class="btn btn-outline-primary">← Back</a>
    </div>
    @if (Model == null || !Model.Any())
    {
        <div class="text-center alert alert-info">
            You have no orders yet.
        </div>
    }
    else
    {
    <!-- Items table -->
    <div class="table-responsive">
        @foreach (var order in Model)
        {
            <table class="table table-sm align-middle mt-2 mb-0 order-table">

            <thead>
                
                <!-- new meta row -->
                <tr class="table-secondary">
                    <th colspan="2" class="text-start">Date: @order.OrderDate.ToString("dd MMM yyyy")</th>
                    <th class="text-end">Order #: @order.Id</th>
                </tr>
                <!-- existing header row -->
                <tr>
                    <th scope="col">Product Name</th>
                    <th class="text-center">Qty</th>
                    <th class="text-end">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in order.Items)
                {
                        <tr>
                            <td>@item.Product.Name</td>
                    <td class="text-center">1</td>
                    <td class="text-end">£@item.Price</td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="2" class="text-end">Total</th>
                    <th class="text-end">£@order.Total</th>
                </tr>
            </tfoot>
        </table>
        }
    </div>
    }

    @* Optional empty state for later
    <div class="alert alert-info">You have no orders yet.</div>
    *@
</section>