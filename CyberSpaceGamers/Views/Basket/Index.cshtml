@{
    ViewData["Title"] = "Your Basket";
    Layout = "_Layout";
}
<div class="container py-4">
    <h1 class="h3 mb-4">Your Basket</h1>
    <!-- Basket list (demo items only; no functionality) -->
    <div class="list-group mb-4">
        <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <div class="fw-semibold">Elden Ring</div>
                <div class="text-muted small">£49.99</div>
            </div>
            <!-- X on the right -->
            <button type="button" class="btn btn-sm btn-outline-danger" disabled title="Demo only">×</button>
        </div>

        <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <div class="fw-semibold">Legend of Zelda</div>
                <div class="text-muted small">£59.99</div>
            </div>
            <button type="button" class="btn btn-sm btn-outline-danger" disabled title="Demo only">×</button>
        </div>

        <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <div class="fw-semibold">Forza Horizon</div>
                <div class="text-muted small">£44.99</div>
            </div>
            <button type="button" class="btn btn-sm btn-outline-danger" disabled title="Demo only">×</button>
        </div>
    </div>

    <!-- Bottom area with Checkout button -->
    <div class="card">
        <div class="card-body d-flex justify-content-end">
            <button class="btn btn-primary btn-lg" disabled title="Demo only">Check out</button>
        </div>
    </div>
</div>
