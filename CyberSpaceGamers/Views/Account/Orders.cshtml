@{
    ViewData["Title"] = "Your Order History";
    string Badge(string status)
    {
        var s = (status ?? "").ToLower();
        return s switch
        {
            "completed" => "badge bg-success",
            "processing" => "badge bg-warning text-dark",
            "cancelled" => "badge bg-secondary",
            _ => "badge bg-light text-dark"
        };
    }
}
<section class="container py-4 page-orders">
    <h1 class="display-6 fw-bold text-uppercase mb-3">Your Order History</h1>

    <!-- Order 1 -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-6 gy-2 order-meta">
                <div class="col"><strong>Date:</strong><br>6 Oct, 2025</div>
                <div class="col"><strong>Order #:</strong><br>10090124489</div>
                <div class="col"><strong>Product:</strong><br>BattleField 6</div>
                <div class="col"><strong>Price:</strong><br>£89.99</div>
                <div class="col"><strong>Total:</strong><br>£89.99</div>
                <div class="col"><strong>Status:</strong><br><span class="@Badge("Completed")">COMPLETED</span></div>
            </div>
        </div>
    </div>

    <!-- Order 2 -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-6 gy-2 order-meta">
                <div class="col"><strong>Date:</strong><br>25 Oct, 2025</div>
                <div class="col"><strong>Order #:</strong><br>10090129901</div>
                <div class="col"><strong>Product:</strong><br>Resident Evil Village</div>
                <div class="col"><strong>Price:</strong><br>£54.50</div>
                <div class="col"><strong>Total:</strong><br>£54.50</div>
                <div class="col"><strong>Status:</strong><br><span class="@Badge("Processing")">PROCESSING</span></div>
            </div>
        </div>
    </div>

    <!-- Order 3 -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-6 gy-2 order-meta">
                <div class="col"><strong>Date:</strong><br>31 Oct, 2025</div>
                <div class="col"><strong>Order #:</strong><br>10090130007</div>
                <div class="col"><strong>Product:</strong><br>Josh: Empires Unite</div>
                <div class="col"><strong>Price:</strong><br>£20.99</div>
                <div class="col"><strong>Total:</strong><br>£20.99</div>
                <div class="col"><strong>Status:</strong><br><span class="@Badge("Cancelled")">CANCELLED</span></div>
            </div>
        </div>
    </div>

    @* Optional empty state for later
    <div class="alert alert-info">You have no orders yet.</div>
    *@
</section>