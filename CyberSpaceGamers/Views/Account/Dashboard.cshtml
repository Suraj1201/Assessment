@model CyberSpaceGamers.Models.ViewModels.AccountDashboardViewModel
@{
    ViewData["Title"] = "My Account";
}

<section class="container py-4">
    <h2 class="mb-3">My Account</h2>
    <div class="row g-3">
        @foreach (var t in Model.Tiles)
        {
            <div class="col-12 col-sm-6 col-lg-4">
                <a class="text-decoration-none" asp-controller="@t.Controller" asp-action="@t.Action">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex align-items-start gap-3">
                            <i class="bi @t.Icon fs-2"></i>
                            <div>
                                <h5 class="card-title mb-1">@t.Title</h5>
                                <p class="card-text text-muted mb-0">@t.Description</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</section>