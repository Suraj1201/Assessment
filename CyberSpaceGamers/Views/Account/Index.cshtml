@{
    ViewData["Title"] = "My Account";
}

<section class="container py-4">
    <h1 class="mb-4">My Account</h1>

    <div class="row g-3">
        <!-- Profile tile -->
        <div class="col-12 col-md-6">
            <a class="text-decoration-none" asp-controller="Account" asp-action="Profile">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-person-circle fs-1"></i>
                        <div>
                            <h5 class="card-title mb-1">Profile</h5>
                            <p class="mb-0 text-muted">View and edit your profile</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Orders tile -->
        <div class="col-12 col-md-6">
            <a class="text-decoration-none" asp-controller="Account" asp-action="Orders">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-start gap-3">
                        <i class="bi bi-receipt fs-1"></i>
                        <div>
                            <h5 class="card-title mb-1">Orders</h5>
                            <p class="mb-0 text-muted">See your order history</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>
</section>