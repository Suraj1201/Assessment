@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}
@if (TempData["DeletedMessage"] != null)
{
    <div id ="alertMessage" class="alert alert-success" role="alert">
        @TempData["DeletedMessage"]
    </div>

    <script>
        setTimeout(() => {
            const alert = document.getElementById("alertMessage");
            if (alert) {
                alert.style.transition = "opacity 0.5s ease";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 500);
            }
        }, 3000);
    </script>
}
<div class="container py-4">
    <div class="hero rounded-3xl">
        <div class="d-flex flex-column align-items-center text-center gap-3">
            <img src="~/img/logo.png" alt="Mascot" class="hero-logo" />
            <h1 class="title m-0">Cyber Space Gamers</h1>
            <p class="lead m-0">Discover the best games — play more, pay less.</p>
            <div class="mt-3 d-flex gap-2">
                <a class="btn btn-primary btn-lg" asp-controller="Product" asp-action="Index">Browse Products</a>
                <a class="btn btn-outline-secondary btn-lg" href="#">Explore Categories</a>
            </div>
        </div>
    </div>
</div>
@* Auto-sliding banner (Bootstrap 5 Carousel) — view only *@
<div id="homeCarousel" class="carousel slide carousel-fade mb-4" data-bs-ride="carousel">
    @* Dots *@
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
    </div>

    <div id="homeCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3500">
        <!-- indicators: must equal number of slides -->
        <div id="homeCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
            <!-- Carousel indicators (optional dots) -->
            <div class="carousel-indicators circles">
                <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
                <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
            </div>

            <!-- Carousel images -->
            <div class="carousel-inner rounded-4 shadow overflow-hidden">
                <div class="carousel-item active">
                    <img src="~/banner/banner1.jpg" asp-append-version="true" class="d-block w-100 banner-img" alt="Banner 1" />
                </div>
                <div class="carousel-item">
                    <img src="~/banner/banner2.jpg" asp-append-version="true" class="d-block w-100 banner-img" alt="Banner 2" />
                </div>
                <div class="carousel-item">
                    <img src="~/banner/banner3.jpg" asp-append-version="true" class="d-block w-100 banner-img" alt="Banner 3" />
                </div>
                <div class="carousel-item">
                    <img src="~/banner/banner4.jpg" asp-append-version="true" class="d-block w-100 banner-img" alt="Banner 4" />
                </div>
                <div class="carousel-item">
                    <img src="~/banner/banner5.jpg" asp-append-version="true" class="d-block w-100 banner-img" alt="Banner 5" />
                </div>
            </div>

            <!-- Carousel controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev" aria-label="Previous">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next" aria-label="Next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </button>
        </div>
    </div>
</div>