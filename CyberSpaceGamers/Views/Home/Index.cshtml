@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}
<div class="container py-4">
    <div class="hero rounded-3xl">
        <div class="d-flex flex-column align-items-center text-center gap-3">
            <img src="~/img/logo.png" alt="Mascot" class="hero-logo" />
            <h1 class="title m-0">Cyber Space Gamers</h1>
            <p class="lead m-0">Discover the best games — play more, pay less.</p>
            <div class="mt-3 d-flex gap-2">
                <a class="btn btn-primary btn-lg" asp-controller="Product" asp-action="Index">Browse Products</a>
                <a class="btn btn-outline-secondary btn-lg" href="#">Explore Categories</a>
            </div>
        </div>
    </div>
</div>
