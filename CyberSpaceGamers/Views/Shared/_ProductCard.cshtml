@model CyberSpaceGamers.Models.Product



<div class="card card-dark product-card h-100 shadow-sm">
    <div class="card-body d-flex flex-column">
        <form action="/" method="post">
            <input type="hidden" name="ProductID" value="@Model.Id"/>
            <h5 class="card-title mb-1">
                <a class="text-decoration-none text-white product-link" asp-action="Details"
                   asp-route-id="@Model.Id"
                   class="btn btn-outline-primary w-100">@Model.Name
                   </a>
            </h5>
        </form>
        <style>.product-link:hover {text-decoration: underline !important;}</style>
        <div class="small text-muted mb-2">@Model.ShortDescription</div>
        <div class="price">£@Model.Price</div>

        <div class="mt-auto d-grid">
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Basket" asp-action="AddToBasket" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary">Add to Basket</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100" type="button">
                    Login to Add
                </a>
            }
        </div>
    </div>
</div>