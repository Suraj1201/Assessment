@model CyberSpaceGamers.Models.Product



<div class="card card-dark product-card h-100 shadow-sm">
    <div class="card-body d-flex flex-column">
        <form action="/" method="post">
            <input type="hidden" name="ProductID" value="@Model.Id"/>
            <h5 class="card-title mb-1"><a class="text-decoration-none text-white product-link" asp-controller="Product" asp-action="Details">@Model.Name</a></h5>
        </form>
        <style>.product-link:hover {text-decoration: underline !important;}</style>
        <div class="small text-muted mb-2">@Model.ShortDescription</div>
        <div class="price">£@Model.Price</div>

        <div class="mt-auto d-grid">
            <form method="post">
                <input type="hidden" name="id" value="@Model.Id"/>
                <a class="btn btn-primary w-100" asp-controller="Basket" asp-action="Index" type="button" aria-disabled="true">Add to Basket</a>
            </form>
        </div>
    </div>
</div>