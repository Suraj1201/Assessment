@model CyberSpaceGamers.Models.Product

<div class="card card-dark product-card h-100 shadow-sm">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title mb-1">@Model.Name</h5>
        <div class="small text-muted mb-2">@Model.ShortDescription</div>
        <div class="price">£@Model.Price</div>

        <div class="mt-auto d-grid">
            <form method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button class="btn btn-primary w-100" type="button" disabled aria-disabled="true" title="Demo only">
                    <i class="bi bi-plus-lg"></i> Add to Basket
                </button>
            </form>
        </div>
    </div>
</div>