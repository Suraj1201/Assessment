<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberSpaceGamers</title>   @*title*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CyberSpaceGamers.styles.css" asp-append-version="true" />
</head>
<body class="body-dark">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-navy shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center"
                   asp-controller="Home" asp-action="Index" aria-label="Home">
                    <img src="~/img/logo.png" alt="Logo" class="brand-logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Product" ? "active":"")"
                               asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="#">Privacy</a></li>
                    </ul>

                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-light" asp-controller="Basket" asp-action="Index">🧺 Basket</a>
                        <a class="btn btn-warning" asp-controller="Account" asp-action="Login">Login/SignUp</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="container py-5">

            <div class="row g-4">
                <!-- Column 1 -->
                <div class="col-12 col-md-4">
                    <h6 class="footer-title">COMPANY</h6>
                    <ul class="list-unstyled small m-0">
                        <li><a href="#" class="footer-link">About</a></li>
                        <li><a href="#" class="footer-link">Support</a></li>
                        <li><a href="#" class="footer-link">Contact</a></li>
                    </ul>
                </div>

                <!-- Column 2 -->
                <div class="col-12 col-md-4">
                    <h6 class="footer-title">SHOP</h6>
                    <ul class="list-unstyled small m-0">
                        <li><a asp-controller="Product" asp-action="Index" class="footer-link">Products</a></li>
                        <li><a href="#" class="footer-link">Privacy</a></li>
                    </ul>
                </div>

                <!-- Column 3 (Newsletter) -->
                <div class="col-12 col-md-4">
                    <h6 class="footer-title">NEWSLETTER</h6>
                    <form class="d-flex gap-2" role="search">
                        <input type="email"
                               class="form-control form-control-lg newsletter-input"
                               placeholder="Enter your email"
                               aria-label="Email"
                               disabled />
                        <button type="button" class="btn btn-primary btn-lg" disabled>Subscribe</button>
                    </form>
                </div>
            </div>

            <hr class="footer-divider my-4" />

            <p class="small m-0 text-center">
                &copy; @DateTime.Now.Year — <strong>Cyber Space Gamers</strong>. All rights reserved.
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
   @*booststrap*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
